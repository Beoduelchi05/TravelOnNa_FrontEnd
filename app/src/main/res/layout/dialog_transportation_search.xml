<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog_background">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교통수단 정보 검색"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출발지 선택"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/sourceRegionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:text=""/>
        
    <Spinner
        android:id="@+id/sourceRegionSpinner"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"/>
            
    <LinearLayout
        android:id="@+id/sourceSubRegionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/sourceSubRegionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시/군/구"
            android:textStyle="bold"/>
            
        <TextView
            android:id="@+id/sourceSubRegionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:text=""/>
            
        <Spinner
            android:id="@+id/sourceSubRegionSpinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="도착지"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/destinationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:text="도착지 정보"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교통수단"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/transportTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:text="자동 선택된 교통수단 정보"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출발 날짜"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/departureDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="출발 날짜 정보"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="교통수단 검색"
        android:layout_marginTop="16dp"/>

</LinearLayout> 