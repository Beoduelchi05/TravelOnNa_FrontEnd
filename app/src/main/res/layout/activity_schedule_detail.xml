<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 상단 헤더 -->
    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/blue_primary"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 일 별 탭 레이아웃 -->
    <HorizontalScrollView
        android:id="@+id/tabScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerBackground">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <View
        android:id="@+id/tabDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/tabScrollView" />

    <!-- 버튼 영역을 Day 탭 아래로 위치 -->

    <!-- ViewPager는 이제 버튼 아래에서 시작 -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tabDivider"
        tools:layout_editor_absoluteX="0dp">

        <!-- 장소 추가하기 버튼 - 흰색 배경에 회색 테두리, 검정색 글씨 -->
        <TextView
            android:id="@+id/addPlaceButton"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/white_button_with_gray_border"
            android:gravity="center"
            android:padding="10dp"
            android:text="장소 추가하기"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- 완료 버튼 - 파란색 배경, 흰색 글씨 -->
        <TextView
            android:id="@+id/completeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/blue_button_background"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout" />

</androidx.constraintlayout.widget.ConstraintLayout> 