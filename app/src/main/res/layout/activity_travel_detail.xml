<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 상단 영역 (일정 이름 및 날짜) -->
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 뒤로가기 및 일정 이름 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_black"
                android:padding="2dp" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="미미미누"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 날짜 표시 -->
        <TextView
            android:id="@+id/dateRangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="2025.04.15 - 2025.04.18"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 일별 탭 영역 -->
    <HorizontalScrollView
        android:id="@+id/tabScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="40dp"
            android:paddingEnd="16dp">

            <!-- 여기에 동적으로 탭이 추가됩니다 -->
            <!-- DAY 01 탭 -->
            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="30dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/day1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAY 01"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                
                <!-- 선택 표시 - 위치 변경 -->
                <View
                    android:id="@+id/day1Indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="#FF7F00"/>

                <TextView
                    android:id="@+id/day1Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화.15"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#888888"/>
            </LinearLayout>

            <!-- DAY 02 탭 -->
            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="30dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/day2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAY 02"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#888888"/>
                
                <!-- 선택 표시 (기본적으로 보이지 않음) - 위치 변경 -->
                <View
                    android:id="@+id/day2Indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="#FF7F00"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/day2Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수.16"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#888888"/>
            </LinearLayout>

            <!-- DAY 03 탭 -->
            <LinearLayout
                android:id="@+id/tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/day3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DAY 03"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#888888"/>
                
                <!-- 선택 표시 (기본적으로 보이지 않음) - 위치 변경 -->
                <View
                    android:id="@+id/day3Indicator"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="#FF7F00"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/day3Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목.17"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:textColor="#888888"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- 구분선 -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/tabScrollView" />

    <!-- 장소 목록 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlaces"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

</androidx.constraintlayout.widget.ConstraintLayout> 