<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- 검정색 배경 원(테두리 효과를 위한 약간 큰 원) -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/black" />
                    <size android:width="20.5dp" android:height="20.5dp" />
                </shape>
            </item>
            <!-- 파란색 테두리가 있는 흰색 원 -->
            <item android:top="0.25dp" android:left="0.25dp" android:right="0.25dp" android:bottom="0.25dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="@color/blue_primary" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <!-- 검정색 배경 원(테두리 효과를 위한 약간 큰 원) -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/black" />
                    <size android:width="20.5dp" android:height="20.5dp" />
                </shape>
            </item>
            <!-- 회색 테두리가 있는 흰색 원 -->
            <item android:top="0.25dp" android:left="0.25dp" android:right="0.25dp" android:bottom="0.25dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                    <stroke android:width="1dp" android:color="#DDDDDD" />
                    <size android:width="20dp" android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 